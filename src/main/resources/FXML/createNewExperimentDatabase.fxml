<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #C2dce5; -fx-border-color: #003366; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLControllers.CreateNewExperimentDatabase">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label stylesheets="@../CSS/label.css" text="CREATE A NEW EXPERIMENT DATABASE">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label minWidth="-Infinity" prefHeight="17.0" stylesheets="@../CSS/label.css" text="Database Name: ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="newDatabaseName" prefHeight="25.0" prefWidth="275.0" style="-fx-background-color: ffffff;" />
                  <Label text=".csv">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <JFXButton fx:id="submitButton" onAction="#generateDatabase" stylesheets="@../CSS/mediumButtons.css" text="Submit">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="closeButton" onAction="#handleCloseButton" stylesheets="@../CSS/mediumButtons.css" text="Close">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
