<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<AnchorPane style="-fx-background-color: #C2dce5; -fx-border-color: #003366; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLControllers.LoggerMenu">
   <children>
      <HBox AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <VBox>
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="799.0" stylesheets="@../CSS/label.css" text="Current Log History" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TableView fx:id="logTable">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                     <columns>
                        <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time" />
                        <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
                        <TableColumn fx:id="researcherColumn" prefWidth="111.0" text="Researcher" />
                        <TableColumn fx:id="trialNumberColumn" prefWidth="83.0" text="Trial #" />
                        <TableColumn fx:id="sampleNumberColumn" minWidth="0.0" prefWidth="83.0" text="Sample #" />
                        <TableColumn fx:id="filenameColumn" prefWidth="87.0" text="Filename" />
                        <TableColumn fx:id="commentColumn" prefWidth="244.0" text="Comment" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <JFXButton fx:id="printLoggerButton" onAction="#handleWriteToNewLogButton" stylesheets="@../CSS/mediumButtons.css" text="Write History To Log File">
                            <font>
                                <Font size="19.0" />
                            </font>
                        </JFXButton>
                        <JFXButton fx:id="resetLoggerButton" onAction="#resetLogger" stylesheets="@../CSS/mediumButtons.css" text="Reset Logger">
                            <font>
                                <Font size="19.0" />
                            </font>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <VBox alignment="CENTER" prefHeight="35.0" prefWidth="600.0" />
                  <VBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" stylesheets="@../CSS/label.css" text="LOAD A PREVIOUS LOG FILE">
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label minWidth="-Infinity" prefHeight="17.0" stylesheets="@../CSS/label.css" text="Log File Path:  ">
                                  <font>
                                      <Font size="19.0" />
                                  </font>
                              </Label>
                              <TextField fx:id="priorLogPath" prefHeight="25.0" prefWidth="387.0" style="-fx-background-color: ffffff;" />
                              <JFXButton fx:id="logFileBrowser" minHeight="-Infinity" minWidth="-Infinity" onAction="#browseLogs" stylesheets="@../CSS/mediumButtons.css" text="Browse Files">
                                  <font>
                                      <Font size="19.0" />
                                  </font>
                              </JFXButton>
                              <JFXButton fx:id="priorLogHelpButton" stylesheets="@../CSS/helpButton.css" text="?">
                                  <font>
                                      <Font size="19.0" />
                                  </font>
                              </JFXButton>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                           <children>
                              <JFXButton fx:id="openLogButton" disable="true" onAction="#openLog" stylesheets="@../CSS/mediumButtons.css" text="Open Log">
                                  <font>
                                      <Font size="19.0" />
                                  </font>
                              </JFXButton>
                              <JFXButton fx:id="closeLoggerButton" onAction="#closeLogger" stylesheets="@../CSS/mediumButtons.css" text="Close">
                                  <font>
                                      <Font size="19.0" />
                                  </font>
                              </JFXButton>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
