                     <children>
                        <JFXButton fx:id="keywordButton" minWidth="-Infinity" onAction="#openKeywordLibrary" stylesheets="@../CSS/mediumButtons.css" text="All Keywords">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="experiments" minWidth="-Infinity" onAction="#openExperimentLibrary" stylesheets="@../CSS/mediumButtons.css" text="All Experiments">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="saveButton" minWidth="-Infinity" onAction="#saveProjectPreferences" stylesheets="@../CSS/mediumButtons.css" text="Save">
